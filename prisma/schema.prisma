generator client {
     provider = "prisma-client-js"
}

datasource db {
     provider = "postgresql"
     url      = env("DATABASE_URL")
}

model Admin {
     id        Int      @id @default(autoincrement())
     username  String   @unique
     password  String
     createdAt DateTime @default(now())
}

model Activity {
     id          Int    @id @default(autoincrement())
     title       String
     description String
     icon        String
     sortOrder   Int    @default(0)
}

model Event {
     id       Int    @id @default(autoincrement())
     title    String
     date     String
     time     String
     location String
     category String
}

model GalleryImage {
     id       Int    @id @default(autoincrement())
     src      String
     alt      String
     category String
}

model SiteSettings {
     id                   Int    @id @default(1)
     aboutTitle           String @default("")
     aboutText1           String @default("")
     aboutText2           String @default("")
     aboutQuote           String @default("")
     iban                 String @default("")
     ibanHolder           String @default("")
     phone                String @default("")
     phone2               String @default("")
     email                String @default("")
     address              String @default("")
     workingHoursWeekday  String @default("09:00 - 18:00")
     workingHoursSaturday String @default("10:00 - 15:00")
     workingHoursSunday   String @default("Kapalı")
     instagram            String @default("")
     facebook             String @default("")
     youtube              String @default("")
     whatsapp             String @default("")

     // Hero Section
     heroBadge       String @default("Tasavvuf Geleneğinin İzinde")
     heroTitle1      String @default("Geylani Rufai")
     heroTitle2      String @default("İlim, İrfan ve Hizmet Yolu")
     heroDescription String @default("Tasavvuf geleneğini yaşatmak, gönülleri ilahi aşkla buluşturmak ve gelecek nesillere bu manevi mirası aktarmak amacıyla hizmet ediyoruz.")
     heroButtonText1 String @default("Faaliyetlerimiz")
     heroButtonLink1 String @default("#activities")
     heroButtonText2 String @default("Bize Katılın")
     heroButtonLink2 String @default("#contact")
     heroImage       String @default("https://picsum.photos/1920/1080?grayscale&blur=2")

     // Map Section
     mapTitle String @default("Dernek Konumu")
     mapLat   Float  @default(41.0082)
     mapLng   Float  @default(28.9784)
     mapZoom  Int    @default(15)
}
